<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/routeCardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/depText"
                android:text="Lähtö:"/>

            <TextView
                android:layout_toRightOf="@+id/depText"
                android:id="@+id/originDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />

            <TextView
                android:layout_below="@id/depText"
                android:id="@+id/originTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:layout_toRightOf="@id/originTimeTV"
                android:layout_below="@id/depText"
                android:layout_marginLeft="10dp"
                android:id="@+id/originClosestStationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:layout_toRightOf="@id/originClosestStationTV"
                android:layout_below="@id/depText"
                android:layout_marginLeft="10dp"
                android:id="@+id/trainTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:layout_below="@id/originTimeTV"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrText"
                android:text="Saapuminen:"/>

            <TextView
                android:layout_below="@id/arrText"
                android:id="@+id/destinationClosestStationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:id="@+id/Vaihto" />

            <TextView
                android:text="Vaihto:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="21dp"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/Vaihto" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>