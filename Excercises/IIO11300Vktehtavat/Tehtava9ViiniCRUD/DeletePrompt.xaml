<Window x:Class="Tehtava9ViiniCRUD.DeletePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava9ViiniCRUD"
        mc:Ignorable="d"
        Title="DeletePrompt" Height="80.899" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Oletko varma että haluat poistaa tämän asiakkaan?"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnApprove" Content="Kyllä" Click="btnApprove_Click"/>
                <Button x:Name="btnDecline" Content="Ei"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
